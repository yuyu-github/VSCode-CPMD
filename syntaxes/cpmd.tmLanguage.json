{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CPMD",
	"patterns": [
		{"include": "#comment"},
		{"include": "#metadata"},
		{"include": "#value"}
	],
	"repository": {
		"comment": {
			"patterns": [
				{"include": "#line"},
				{"include": "#block"}
			],
			"repository": {
				"line": {
					"patterns": [
						{
							"name": "comment.line",
							"match": "//.*"
						}
					]
				},
				"block": {
					"name": "comment.block",
					"begin": "/\\*(?:.*(?=\\*)|(?!\\*/).*$)",
					"end": "\\*/"
				}
			}
		},
		"metadata": {
			"patterns": [
				{
					"name": "keyword.other",
					"match": "^ *#(?:VERSION)"
				}
			]
		},
		"value": {
			"patterns": [
				{
					"include": "#string"
				}
			],
			"repository": {
				"string": {
					"patterns": [
						{
							"name": "string.quoted.single",
							"match": "'((?:\\\\.|[^'])*)'",
							"captures": {
								"1": {"patterns": [{"include": "#escape"}]}
							}
						},
						{
							"name": "string.quoted.double",
							"match": "\"((?:\\\\.|[^\"])*)\"",
							"captures": {
								"1": {"patterns": [{"include": "#escape"}]}
							}
						}
					],
					"repository": {
						"escape": {
							"patterns": [
								{
									"name": "constant.character.escape",
									"match": "\\\\."
								}
							]
						}
					}
				}
			}
		}
	},
	"scopeName": "text.cpmd"
}
