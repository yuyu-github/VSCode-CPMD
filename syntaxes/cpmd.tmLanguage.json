{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CPMD",
	"patterns": [
		{"include": "#comment"},
		{"include": "#metadata"}
	],
	"repository": {
		"comment": {
			"patterns": [
				{"include": "#line"},
				{"include": "#block"}
			],
			"repository": {
				"line": {
					"patterns": [
						{
							"name": "comment.line",
							"match": "//.*"
						}
					]
				},
				"block": {
					"name": "comment.block",
					"begin": "/\\*(?:.*(?=\\*)|(?!\\*/).*$)",
					"end": "\\*/"
				}
			}
		},
		"metadata": {
			"patterns": [
				{
					"name": "keyword.other",
					"match": "^ *#(?:VERSION)"
				}
			]
		}
	},
	"scopeName": "text.cpmd"
}
